cin >> 입력할 데이터;

//예제
#include <iostream>

int main(){
	
    int age;								
    
    std::cout << "나이를 입력해주세요 :";
    std::cin >> age;
    
    std::cout << age << std::endl;
    return 0;
}

//-------------------------------------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;			# std 라는 namespace를 사용할거야!

int main(){
	
    int age;
    
    cout << "나이를 입력하세요.";
    cin >> age;

    cout << age <<endl;
    return 0;
}



